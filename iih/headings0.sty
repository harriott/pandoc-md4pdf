% headings for my TextNotes
% -------------------------
% called from  $MD4PDF/iih/iih.tex

\titleformat{\section} % ( Huge = huge at 12pt )
  {\normalfont      \huge\bfseries\color{Bittersweet}}{\thesection}      {1em}{}
\titleformat{\subsection}
  {\normalfont     \LARGE\bfseries\color{CadetBlue}}  {\thesubsection}   {1em}{}
\titleformat{\subsubsection}
  {\normalfont     \Large\bfseries\color{Thistle}}{\thesubsubsection}{1em}{}
% the following also remove  runin:
\titleformat{\paragraph}
  {\normalfont     \large\bfseries\color{LimeGreen}}    {\theparagraph}    {1em}{}
\titleformat{\subparagraph}
  {\normalfont\normalsize\bfseries\color{LimeGreen}}    {\thesubparagraph} {1em}{}

